#! /bin/bash

set -e

echo "Clean potentially-broken previous install"
dpkg --configure -a || true
echo "Upgrade new packages"
apt upgrade -y
echo "Purge unneeded packages"
apt autopurge -y
echo "Purge residual configurations"
apt purge -y $(dpkg -l | sed -n 's/^rc *\([^ ]*\).*/\1/p')
echo "Clean package cache"
apt clean -y
